.form-container h2 {
    margin-bottom: 20px;
    color: #f39c12; /* Orange color */
}

.form-group {
    margin-bottom: 15px;
    text-align: left;
}

label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #f39c12; /* Orange color */
}

input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s;
}

input:focus {
    border-color: #f39c12; /* Orange focus color */
    outline: none;
}

.submit-btn {
    width: 100%;
    padding: 10px;
    background-color: #f39c12; /* Orange button */
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.submit-btn:hover {
    background-color: #e67e22; /* Lighter orange */
}

.login-link {
    margin-top: 15px;
}

.login-link a {
    color: #f39c12; /* Orange color */
    text-decoration: none;
}

</style>